  <main class="mt-5 pt-3">
    <div class="container my-5">
      <div class="row justify-content-center">
        <div class="col-lg-9">
          <h1 class="mb-3">Update Food</h1>
          <form method="post" action="/change" enctype="multipart/form-data">
            <div class="row g-3">
              <div class="col-8">
                <div class="row">
                  <div class="col-md-2">
                    <label for="id" class="form-label">idFood</label>
                    <input type="number" disabled class="form-control" id="id" value="<%= Food.IDFood%>" name="idFood"  >
                  </div>
                  <div class="col-md-10">
                    <label for="Food" class="form-label">Food Name</label>
                    <input type="text" value="<%= Food.Food%>" class="form-control" id="Food" name="Food"  >
                  </div>
                  <div class="col-md-4">
                    <label for="type" class="form-label">Type</label>
                    <select class="form-select" name="type" id="type">
                      <% for(let i = 0 ; i < types.length ; i++){ 
                        if (types[i].IDType === Food.Type){ %>
                        <option value="<%=types[i].IDType %>"><%=types[i].Type %></option>
                      <% } break
                    }%>
                      <% for(let i = 0 ; i < types.length; i++){ %>
                      <option value="<%=types[i].IDType %>"><%=types[i].Type %></option>
                      <% }%>
                      
                    </select>
                  </div>
                  <div class="col-md-4">
                    <label for="price" class="form-label">Price</label>
                    <input type="number" value="<%= Food.Price%>" class="form-control" id="price" name="Price"  >
                  </div>
                  <div class="col-md-4">
                    <label for="LeftAmount" class="form-label">LeftAmount</label>
                    <input type="number" value="<%=Food.Amount%>" class="form-control" id="Amount" name="Amount"  >
                  </div>
                  <div class="col-12">
                    <label for="info" class="form-label">Detail infomation</label>
                    <textarea class="form-control" id="info" name="content" rows="50"></textarea>
                  </div>
                </div>
              </div>
              <div class="col-4">
                <img width="100%" src="<%=Food.img_src%>" alt="hhhhh" srcset="">
                <label for="img">Change Image</label>
                <input type="file" name="img" id="img">
              </div>
              <div class="col-12">
                <div class="row">
                  <div class="col-md-6">
                    <button type="submit"
                      class="btn btn-dark w-100 fw-bold">Upload</button>
                  </div>
                </div>
              </div>
            </div>
          </form>
          <script>
            let editor;
            ClassicEditor
                .create( document.querySelector( '#info' ) )
                .then( newEditor => {
                    editor = newEditor;
                } )
                .catch( error => {
                    console.error( error );
