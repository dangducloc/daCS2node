<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Start your development with FoodHut landing page.">
    <meta name="author" content="Devcrud">
    <title>FoodHut</title>
    <!-- Bootstrap CSS v5.2.1
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous"> -->
    <link rel="stylesheet" href="assets/vendors/themify-icons/css/themify-icons.css">

    <link rel="stylesheet" href="assets/vendors/animate/animate.css">

    <!-- Bootstrap + FoodHut main styles -->

    <link rel="stylesheet" href="assets/css/foodhut.css">
    <!-- <link rel="stylesheet" href="assets/css/buynow.css"> -->
    <!-- axios -->
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script src="https://unpkg.com/vue@next"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
        integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <!-- <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script> -->
</head>

<body>
    <%- include('navbar.ejs')-%>



        <div class="container" style="padding-top: 200px;">
            <div class="card mb-3 bg-secondary" style="max-width: 100%;">
                <div class="py-5 text-center">
                    <h2>Checkout form</h2>
                </div>
                <div class="row g-0">
                    <div class="col-md-5"
                        style="justify-content: flex-end;align-items: center;display: flex;align-content: stretch;">
                        <div style="width: 90%;">
                                <div class="card mb-3" style="max-width: 540px;">
                                    <div class="row g-0">
                                        <div class="col-md-12">
                                            <img src="<%=food[0].img_src%>" class="img-fluid rounded-start" alt="...">
                                        </div>
                                        
                                        
                                    </div>
                                </div>
                            
                        </div>
                    </div>
                    <div class="col-md-7">
                        <div class="card-body">
                            <!-- <h5 class="card-title"></h5> -->
                            <div class="container">
                                <div class="row">

                                    <div class="col-md-8 order-md-1" style="float:none;margin:auto;">
                                        <span style="float: inline-end;"></span>
                                        <div>
                                            <h2 class="mb-3"><%=food[0].Food%></h2>
                                            <div class="row">
                                                <p class="col-4">Price: $<%=food[0].Price%></p>
                                                <p class="col-4">Amout: $<%=amount%></p>
                                                <p class="col-4">Total: $<%=food[0].Price*amount%></p>
                                            </div>
                                            
                                        </div>
                                        
                                        <h4 class="mb-3">Billing address</h4>
                                        <form class="needs-validation" method="post" action="/singleCheckout" novalidate>
                                            <div class="mb-3">
                                                <label for="address">Address</label>
                                                <input type="text" name="Address" class="form-control" id="address"
                                                    placeholder="1234 Main St" required>
                                                <input type="hidden" name="from"value="<%=from%>">
                                                <input type="hidden" name="iduser"value="<%=iduser%>">
                                                <input type="hidden" name="idfood"value="<%=food[0].IDFood%>">
                                                <input type="hidden" name="amount"value="<%=amount%>">
                                                <input type="hidden" name="price"value="<%=food[0].Price%>">
                                                <div class="invalid-feedback">
                                                    Please enter your shipping address.
                                                </div>
                                            </div>


                                            <hr class="mb-4">

                                            <h4 class="mb-3">Payment</h4>

                                            <div class="d-block my-3">
                                                <div class="custom-control custom-radio">
                                                    <input id="credit" name="paymentMethod" type="radio"
                                                        value="Credit card" class="custom-control-input" checked
                                                        required>
                                                    <label class="custom-control-label" for="credit">Credit card</label>
                                                </div>
                                                <div class="custom-control custom-radio">
                                                    <input id="debit" name="paymentMethod" type="radio"
                                                        value="Debit card" class="custom-control-input" required>
                                                    <label class="custom-control-label" for="debit">Debit card</label>
                                                </div>
                                                <div class="custom-control custom-radio">
                                                    <input id="paypal" name="paymentMethod" type="radio" value="PayPal"
                                                        class="custom-control-input" required>
                                                    <label class="custom-control-label" for="paypal">PayPal</label>
                                                </div>
                                            </div>

                                            <hr class="mb-4">
                                            <button class="btn btn-primary btn-lg btn-block" type="submit">Continue to
                                                checkout</button>
                                        </form>
                                    </div>
                                </div>
                                <!-- <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p> -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <%- include('footer.ejs')-%>

            <!-- Bootstrap JavaScript Libraries -->


            <script src="assets/vendors/jquery/jquery-3.4.1.js"></script>

            <script src="assets/vendors/bootstrap/bootstrap.bundle.js"></script>

            <!-- bootstrap affix -->
            <script src="assets/vendors/bootstrap/bootstrap.affix.js"></script>

            <!-- wow.js -->
            <script src="assets/vendors/wow/wow.js"></script>

            <!-- google maps -->
            <script async defer
                src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCtme10pzgKSPeJVJrG1O3tjR6lk98o4w8&callback=initMap"></script>

            <!-- FoodHut js -->
            <script src="assets/js/foodhut.js"></script>

</body>

</html>